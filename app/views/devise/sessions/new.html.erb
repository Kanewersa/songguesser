<div class="container">
  <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'login__form'}, data: { turbo: false } do |f| %>
    <header class="login__header">
      <h1 class="login__title">SongGuesser 🎶</h1>
      <h3 class="login__subtitle">Zaloguj się, aby kontynuować</h3>
    </header>
    <main class="login__main">
      <div class="login__group">
        <%= f.email_field :email, class: 'login__input', type: 'text', required: true %>
        <label class="login__label">Email </label>
        <div class="login__bar"></div>
      </div>
      <div class="login__group">
        <%= f.password_field :password, class: 'login__input', required: true %>
        <label class="login__label">Hasło </label>
        <div class="login__bar"></div>
      </div>
      <p class="login__terms">Nie masz konta? <%= link_to 'Stwórz je tutaj!', new_user_registration_path %></p>
      <!--    <p class="login__terms">Nie pamiętasz hasła? <%#= link_to 'Zresetuj je tu.', new_user_password_path %></p>-->
    </main>
    <footer class="login__footer">
      <%= f.submit 'Zaloguj się', class: 'login__button' %>
    </footer>
  <% end %>
</div>
